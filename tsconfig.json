{
  "compilerOptions": {
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "module": "System",
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outFile": "dist/main.js",
    "removeComments": true,
    "sourceMap": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "ES5"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}